<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background of the progress bar (gray background) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#E0E0E0"/> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Foreground (progress) with gradient -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp"/> <!-- Rounded corners -->
                <gradient
                    android:startColor="#FF7F50"
                    android:centerColor="#FF6347"
                    android:endColor="#FF4500"
                    android:angle="270"/> <!-- Gradient color from orange to red -->
            </shape>
        </clip>
    </item>
</layer-list>
