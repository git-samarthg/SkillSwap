<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_text_skill_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skill Name" />

    <EditText
        android:id="@+id/edit_text_hours_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hours Available" />

    <EditText
        android:id="@+id/edit_text_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Level (1-10)" />

    <EditText
        android:id="@+id/edit_text_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Skill Type" />

    <EditText
        android:id="@+id/edit_text_years_of_experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Years of Experience" />

    <EditText
        android:id="@+id/edit_text_contact_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contact Number" />

    <Button
        android:id="@+id/button_add_skill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Skill" />

</LinearLayout>
